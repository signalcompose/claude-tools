{
  "permissions": {
    "allow": [
      "Read(*)",
      "Glob(*)",
      "Grep(*)"
    ],
    "ask": [
      "Write(*)",
      "Edit(*)",
      "Bash(git :*)",
      "Bash(gh :*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Bash(rm -rf :*)",
      "Bash(rm -r :*)",
      "Bash(git push --force :*)",
      "Bash(git push -f :*)",
      "Bash(git reset --hard :*)",
      "Bash(gh repo delete :*)",
      "Bash(sudo :*)"
    ]
  },
  "cleanupPeriodDays": 30
}
