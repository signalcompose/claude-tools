{
  "permissions": {
    "allow": [
      "Read(*)",
      "Glob(*)",
      "Grep(*)"
    ],
    "ask": [
      "Write(*)",
      "Edit(*)",
      "Bash(git :*)",
      "Bash(gh :*)",
      "Bash(npm :*)",
      "Bash(pnpm :*)",
      "Bash(yarn :*)",
      "Bash(python :*)",
      "Bash(pip :*)",
      "Bash(cargo :*)",
      "Bash(go :*)",
      "Bash(docker :*)",
      "Bash(curl :*)",
      "Bash(wget :*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./**/credentials.json)",
      "Read(./**/*.pem)",
      "Read(./**/*.key)",
      "Bash(rm -rf :*)",
      "Bash(rm -r :*)",
      "Bash(git push --force :*)",
      "Bash(git push -f :*)",
      "Bash(git reset --hard :*)",
      "Bash(git clean -f :*)",
      "Bash(gh repo delete :*)",
      "Bash(gh secret :*)",
      "Bash(sudo :*)",
      "Bash(chmod 777 :*)"
    ]
  },
  "cleanupPeriodDays": 30
}
